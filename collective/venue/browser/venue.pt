<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.venue">
<body>

<metal:content-core fill-slot="content-core">
<metal:block define-macro="content-core" tal:define="data view/data">

<h3 i18n:translate="label_address">Address</h3>
<p>
<tal:cond condition="data/street">
  <span
      class="street"
      i18n:attributes="title label_street"
      i18n:domain="collective.address"
      tal:content="data/street">Street</span><br/>
</tal:cond>
<tal:cond condition="data/zip_code">
  <span
      class="zip_code"
      i18n:attributes="title label_zip_code"
      i18n:domain="collective.address"
      tal:content="data/zip_code">Zip Code</span>
</tal:cond>
<tal:cond condition="data/city">
  <span
      class="city"
      i18n:attributes="title label_city"
      i18n:domain="collective.address"
      tal:content="data/city">City</span>
</tal:cond>
<tal:cond condition="data/country">
  <br>
  <span
      class="country"
      i18n:attributes="title label_country"
      i18n:domain="collective.address"
      tal:content="data/country">Country</span>
</tal:cond>
</p>

<p class="contact" tal:condition="data/email | data/web | data/phone | data/mobile | data/fax | nothing">
  <h3 i18n:translate="label_contact">Contact</h3>
  <tal:cond condition="data/email">
    E-Mail: <a href="mailto:${data/email}" class="email">${data/email}</a><br/>
  </tal:cond>
  <tal:cond condition="data/web">
    Web: <a href="${data/web}" class="website">${data/web}</a><br/>
  </tal:cond>
  <tal:cond condition="data/phone">
    Tel: <span class="phone">${data/phone}</span><br/>
  </tal:cond>
  <tal:cond condition="data/mobile">
    Mobile: <span class="mobile">${data/mobile}</span><br/>
  </tal:cond>
  <tal:cond condition="data/fax">
    Fax: <span class="fax">${data/fax}</span><br/>
  </tal:cond>
</p>

<p class="socialmedia" tal:condition="data/facebook | data/twitter | data/google_plus | data/instagram | nothing">
<tal:cond condition="data/facebook">
  <a  class="facebook" title="Facebook"
      tal:attributes="href data/facebook">
      <img src="++resource++collective.venue/facebook.svg"
        width="32" height="32" alt="Facebook"></a>
</tal:cond>
<tal:cond condition="data/twitter">
  <a  class="twitter" title="Twitter"
      tal:attributes="href data/twitter">
      <img src="++resource++collective.venue/twitter.svg"
        width="32" height="32" alt="Twitter"></a>
</tal:cond>
<tal:cond condition="data/google_plus">
  <a  class="google_plus" title="Google Plus"
      tal:attributes="href data/google_plus">
      <img src="++resource++collective.venue/google-plus.svg"
        width="32" height="32" alt="Google Plus"></a>
</tal:cond>
<tal:cond condition="python:data['instagram']">
  <a  class="instagram" title="Instagram"
      tal:attributes="href data/instagram">
      <img src="++resource++collective.venue/instagram.svg"
        width="32" height="32" alt="Instagram"></a>
</tal:cond>
</p>

<tal:geo tal:define="geojson view/data_geojson" tal:condition="geojson">
<div class="geolocation_wrapper">
  <div class="map pat-leaflet" tal:attributes="data-geojson geojson"></div>
</div>

<div class="documentByLine">
  <dfn
    i18n:domain="collective.geolocationbehavior"
    i18n:translate="">Geolocation</dfn>
  <span
      class="latitude"
      i18n:attributes="title label_latitude"
      i18n:domain="plone.formwidget.geolocation"
      tal:content="data/latitude">Latitude</span>
  <span
      class="longitude"
      i18n:attributes="title label_longitude"
      i18n:domain="plone.formwidget.geolocation"
      tal:content="data/longitude">Longitude</span>
</div>
</tal:geo>

<p tal:condition="data/notes" tal:content="structure data/notes">Venue notes</p>

</metal:block>
</metal:content-core>

</body>
</html>
