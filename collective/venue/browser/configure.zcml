<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    xmlns:plone="http://namespaces.plone.org/plone"
    i18n_domain="collective.venue">

  <include package="plone.app.contentmenu" />

  <browser:page
      for="*"
      name="base_venue_view"
      class=".venue.VenueView"
      template="venue_base.pt"
      permission="zope2.View"
      layer="..interfaces.IVenueLayer"
      />

  <browser:page
      for="*"
      name="venue_view"
      class=".venue.VenueView"
      template="venue.pt"
      permission="zope2.View"
      layer="..interfaces.IVenueLayer"
      />

  <browser:page
      for="*"
      name="venue_overlay"
      class=".venue.VenueView"
      template="venue_overlay.pt"
      permission="zope2.View"
      layer="..interfaces.IVenueLayer"
      />

  <browser:page
      for="plone.app.contenttypes.interfaces.ICollection"
      name="venue_collection_view"
      class=".venue.VenueCollectionView"
      template="venue_collection.pt"
      permission="zope2.View"
      layer="..interfaces.IVenueLayer"
      />

  <browser:page
      for="plone.app.contenttypes.interfaces.ICollection"
      name="venue_collection_geojson"
      class=".venue.VenueCollectionGeoJSON"
      permission="zope2.View"
      layer="..interfaces.IVenueLayer"
      />

  <browser:page
      name="venue_collection_tile_view"
      for="*"
      permission="zope2.View"
      class=".venuetile.VenueCollectionTileView"
      template="venue_collection_tile.pt"
      />

  <browser:menuItems
      for="plone.app.contenttypes.interfaces.ICollection"
      layer="..interfaces.IVenueLayer"
      menu="plone_displayviews">

    <browser:menuItem
        title="Venue collection view"
        action="venue_collection_view"
        i18n:translate="title"
        />
  </browser:menuItems>

  <configure zcml:condition="installed plone.tiles">
    <include package="plone.tiles" file="meta.zcml" />
    <plone:tile
        add_permission="cmf.ModifyPortalContent"
        class=".venuetile.VenueTile"
        for="*"
        name="collective.venue.venuetile"
        permission="zope2.View"
        template="venue_base.pt"
        title="Venue Display"
    />
  </configure>

  <configure zcml:condition="installed plone.formwidget.geolocation">
    <browser:page
        for="*"
        name="locationsearch"
        class=".locationsearch.LocationSearch"
        permission="cmf.AddPortalContent"
        />
  </configure>

  <browser:page
      name="venue-controlpanel"
      for="Products.CMFPlone.interfaces.IPloneSiteRoot"
      class=".controlpanel.VenueControlPanel"
      layer="collective.venue.interfaces.IVenueLayer"
      permission="plone.app.controlpanel.Site"
      />
  <configure zcml:condition="installed collective.lineage">
    <browser:page
        name="venue-controlpanel"
        for="collective.lineage.interfaces.IChildSite"
        class=".controlpanel.VenueControlPanel"
        layer="collective.venue.interfaces.IVenueLayer"
        permission="plone.app.controlpanel.Site"
        />
  </configure>

</configure>
