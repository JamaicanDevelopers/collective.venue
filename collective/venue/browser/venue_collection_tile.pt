<html
  xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="plone">

  <body>

    <metal:macro define-macro="collection-tile-macro"
                 tal:define="collection nocall:view/collection;
                             geojson collection/@@venue_collection_geojson">
      <div class="collection-leaflet-map" data-geojson='${geojson}' />
      <script type="text/javascript" src="${context/portal_url}/++plone++collective.venue/venue-collection.js"></script>
      <link rel="stylesheet" type="text/css" href="${context/portal_url}/++plone++collective.venue/venue-collection.css">
    </metal:macro>

  </body>
</html>
