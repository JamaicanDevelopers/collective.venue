<html
  xmlns="http://www.w3.org/1999/xhtml"
  xml:lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="plone">

  <body>

    <metal:stylesheets fill-slot="style_slot">
      <link rel="stylesheet" type="text/css" href="${context/portal_url}/++plone++collective.venue/venue-collection.css">
    </metal:stylesheets>

    <metal:javascripts fill-slot="javascript_head_slot">
      <script type="text/javascript" src="${context/portal_url}/++plone++collective.venue/venue-collection.js"></script>
    </metal:javascripts>

    <metal:content fill-slot="content-core">
      <div class="content-text"
        tal:condition="context/text"
        tal:content="structure python:context.text.output_relative_to(view.context)"/>

      <div class="leaflet-wrapper">
        <div class="collection-leaflet-map" data-geojson='${view/data_geojson}' />
      </div>
    </metal:content>

  </body>
</html>
